{
  "expo": {
    "name": "NutraDetective",
    "slug": "NutraDetective3",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667EEA"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutradetective.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "NutraDetective needs camera access to scan product barcodes.",
        "NSPhotoLibraryUsageDescription": "NutraDetective needs access to your photo library to analyze product images.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667EEA"
      },
      "package": "com.nutradetective.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NutraDetective to access your camera to scan barcodes."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a3b12fed-eec0-46ac-93e8-9bf699e367c5"
      }
    }
  }
}
